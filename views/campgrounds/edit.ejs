<% layout('./layouts/boilerplate') %> 

<div class="row">
    <h1 class="text-center"> Edit Campground</h1>
   <div class="col-6 offset-3">

    <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label"for="title">Title</label>
            <input class="form-control" type="text" id="title" placeholder="title" name="campground[title]" value="<%= campground.title %>" required>
            <div class="invalid-feedback">
               Campground Title.
              </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="text" id="location" placeholder="location" name="campground[location]" value="<%=campground.location%>" required>
            <div class="invalid-feedback">
                Campground Location.
              </div>
        </div>
        <!-- <div class="mb-3">
            <label class="form-label" for="image">Add Images</label>
            <input type="file" name="image" id="" multiple>
            <!-- <input class="form-control" type="text" id="image" placeholder="image" name="campground[image]" value="<%=campground.image%>" required>
            <div class="invalid-feedback">
                Campground Image.
              </div> -->
        </div> -->

        <div class="mb-3">
            <label class="form-label" for="descrition">Descrition</label>
            <textarea class="form-control" type="text" id="descrition" placeholder="Describe" name="campground[description]" required> <%=campground.description%></textarea>
            <div class="invalid-feedback">
                Campground Description.
              </div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="price"> Price </label>
            <div class="input-group">
                
                <span class="input-group-text">$</span>
                <input id="price" type="text" class="form-control" aria-label="Amount (to the nearest dollar)" placeholder="0.00" name="campground[price]" value="<%=campground.price%>" required>
                <div class="invalid-feedback">
                    Campground price.
                  </div>
                <span class="input-group-text">.00</span>

            </div>
           
          </div>
          <div class="input-group mb-3">
            <div class="custom-file">
              <input type="file" class="custom-file-input" id="image" multiple name="image">
              <label class="custom-file-label" for="image" ></label>
            </div>
            <div class="input-group-append">
              <!-- <span class="input-group-text" id="">Upload</span> -->
            </div>
          </div>


        <div class="mb-3">
            <button class="btn btn-info">Update Campground</button>

        </div>
        
        </form>
        
        <a href="/campgrounds/<%= campground._id%>">Back to Campground</a>
    

   </div>
</div>


